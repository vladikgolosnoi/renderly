COMPOSE_PROJECT_NAME=renderly

# --- Public ports exposed on the host ---
API_PORT=8080
WEB_PORT=8081
CUSTOM_DOMAIN_PROXY_PORT=8088

# --- Core credentials (set your own strong passwords before deploying) ---
POSTGRES_USER=renderly
POSTGRES_PASSWORD=change-me
POSTGRES_DB=renderly
JWT_SECRET_KEY=change-me-too
MINIO_ROOT_USER=renderly
MINIO_ROOT_PASSWORD=change-this-secret
MINIO_ACCESS_KEY=renderly
MINIO_SECRET_KEY=change-this-minio-secret

# --- API + Frontend URLs ---
VITE_API_URL=https://api.vladikgolosnoi.ru/api
BACKEND_CORS_ORIGINS=["https://studio.vladikgolosnoi.ru"]
PORTAL_URL=https://studio.vladikgolosnoi.ru/login

# --- Custom/public domains ---
PROJECT_SUBDOMAIN_ROOT=sites.vladikgolosnoi.ru
PROJECT_SUBDOMAIN_SCHEME=https
CUSTOM_DOMAIN_CNAME_TARGET=sites.vladikgolosnoi.ru
VITE_CUSTOM_DOMAIN_TARGET=sites.vladikgolosnoi.ru
CUSTOM_DOMAIN_PROXY_SCHEME=https

# --- Storage/MinIO ---
MINIO_BUCKET=renderly-pages
MINIO_SECURE=false
MINIO_PRESIGN_EXP_SECONDS=3600
ASSET_BUCKET=renderly-assets
ASSET_MAX_BYTES=10485760
ASSET_PRESIGN_EXP_SECONDS=3600
ASSET_THUMBNAIL_SIZE=480
ASSET_PUBLIC_BASE=https://api.vladikgolosnoi.ru/api
VITE_ASSET_MAX_MB=10

# --- Misc infrastructure ---
DOMAIN_MANAGER_PORT=8085
DOMAIN_MANAGER_URL=http://domain-manager:8080
DOMAIN_MOCK_VERIFY=false
CUSTOM_DOMAIN_ALLOW_SUFFIX=.vladikgolosnoi.ru

# Redis / misc
REDIS_URL=redis://redis:6379/0
